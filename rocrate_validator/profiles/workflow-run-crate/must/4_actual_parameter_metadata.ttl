@prefix ro: <./> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix ro-crate: <https://github.com/crs4/rocrate-validator/profiles/ro-crate/> .
@prefix schema: <http://schema.org/> .
@prefix bioschemas: <https://bioschemas.org/> .
@prefix bioschemas-cw: <https://bioschemas.org/ComputationalWorkflow#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix workflow-run-crate: <https://github.com/crs4/rocrate-validator/profiles/workflow-run-crate/> .
@prefix validator: <https://github.com/crs4/rocrate-validator/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

workflow-run-crate:ActualParameterDefinition a sh:NodeShape ;
    sh:name "Workflow Run Crate ActualParameter Definition" ;
    sh:description "Check the type of the actual parameter definition" ;
    sh:target [
        a sh:SPARQLTarget ;
        sh:prefixes ro-crate:sparqlPrefixes ;
        sh:select """
        SELECT ?this
        WHERE {
            ?workflow bioschemas-cw:input ?parameter .
            ?parameter a bioschemas:FormalParameter .
            ?this schema:exampleOfWork ?parameter .
        }
    """ ] ;

    sh:property [
        a sh:PropertyShape ;
        sh:name "Actual Parameter Type" ;
        sh:description "The actual parameter MUST have a type of `DataEntity`, `PropertyValue` or `Collection`" ;
        sh:path rdf:type ;
        sh:in (
            ro-crate:DataEntity
            ro-crate:GenericDataEntity
            schema:PropertyValue
            schema:Collection
            workflow-run-crate:ActualParameter
        ) ;
        sh:minCount 1 ;
        sh:message "The actual parameter MUST have a type of `DataEntity`, `PropertyValue` or `Collection`" ;
    ] ;

    # Expand data graph with a triple to define the type of the actual parameter
    sh:rule [
        a sh:TripleRule ;
        sh:subject sh:this ;
        sh:predicate rdf:type ;
        sh:object workflow-run-crate:ActualParameter ;
    ] .
